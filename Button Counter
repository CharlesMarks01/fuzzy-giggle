	@Override
	public void actionPerformed(ActionEvent e) 
	{
		if(e.getActionCommand().equals(count+""))
		{
			count++;
			btn1.setText(""+count);
			
			
		}
		
		
		
	}
	
	public static void main(String[] args)
	{
		ImageClickExample test = new ImageClickExample();
		test.setSize(400,400);
		test.show();
	}

